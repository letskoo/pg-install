############################################
# 기본 환경 (그대로 둬도 됨)
############################################
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=local


############################################
# 회사 / 브랜드 정보 (✅ 클라이언트마다 여기만 바꾸는 구역)
############################################

# 이메일 발신자 표시 이름 (Gmail에서 보이는 이름)
EMAIL_FROM_NAME=회사명

# 회사 공식 명칭 (프론트/백 공용 표시용)
NEXT_PUBLIC_COMPANY_NAME=회사명
COMPANY_NAME=회사명

# 이메일 수신자 (문의 메일이 도착할 "회사" 이메일)
# 여러 명이면 콤마로 구분: a@a.com,b@b.com
COMPANY_RECEIVER_EMAIL=client@email.com


############################################
# 이메일 발송 설정 (Resend)
############################################

# Resend API Key (클라이언트 Resend 대시보드에서 발급)
RESEND_API_KEY=YOUR_RESEND_API_KEY

# 발신자 이메일 주소
# 도메인 인증 없이도 테스트 가능: onboarding@resend.dev
# 도메인 인증 후 운영: notify@client-domain.com
EMAIL_FROM=onboarding@resend.dev

# 이메일 발송 활성화 여부 (true / false)
ENABLE_EMAIL_NOTIFICATIONS=true


############################################
# 고객 상담 / 외부 링크 (✅ 클라이언트 링크로)
############################################

# 카카오톡 상담 링크
KAKAO_CHAT_URL=https://pf.kakao.com/_xxxx/chat


############################################
# Google Sheets 연동 (문의 저장용)
############################################

# 구글 시트 ID (시트 URL의 /d/ 뒤에 있는 ID)
GOOGLE_SHEET_ID=YOUR_SHEET_ID

# 사용할 시트 탭 이름
GOOGLE_SHEET_TAB=carrot

# Apps Script Web App URL (배포된 exec URL)
GOOGLE_SCRIPT_URL=YOUR_SCRIPT_URL

# 프론트에서도 쓰면 동일 값으로 맞추는 게 안전
NEXT_PUBLIC_GOOGLE_SCRIPT_URL=YOUR_SCRIPT_URL


############################################
# 보안 / 기타 (현재 사용 안 함)
############################################
# SECRET_KEY=
